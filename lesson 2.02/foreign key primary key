create table passegers (
id bigint primary key, 
first_name varchar(50),
last_name varchar(50),
date_of_birth date,
country_of_citizenship varchar(50),
country_of_residence varchar(50),
passport_number varchar(20),
created_at timestamp,
updated_at date
);

create table no_fly_list(
id bigint primary key,
active_from time,
active_to time,
no_fly_reason varchar(255),
created_at timestamp,
updated_at time,
passenger_id bigint foreign key references passegers(id)
);







create table security_check (
id bigint primary key,
check_result varchar (20),
comments varchar(7999),
created_at timestamp, 
updated_at date,
passeger_id bigint foreign key  references passegers(id)
);

create table booking (
bookingid bigint primary key,
flight_id bigint,
status varchar(20),
booking_platform varchar(20),
created_at timestamp,
updated_at date,
passenger_id bigint foreign key references passegers(id)
);

create table baggage (
id bigint primary key,
weight_in_kg decimal(4,2),
created_at timestamp,
updated_at time,
booking_id bigint foreign key references booking(bookingid)
);

create table boarding_pass(
id bigint primary key,
qr_code varchar(7999),
created_at timestamp,
updated_at time,
booking_id bigint foreign key references booking(bookingid)
);









create table baggage_check (
id bigint primary key,
check_result varchar(50),
created_at bigint, 
updated_at bigint,
booking_id bigint foreign key references booking(bookingid),
passeger_id bigint foreign key references passegers(id)
);

create table airport (
id bigint primary key,
airport_name varchar(50),
country varchar(50),
state varchar(50),
city varchar(50),
created_up timestamp,
updated_at time
);

create table airline (
id bigint primary key,
airline_code varchar(50),
airline_name varchar(50),
airline_country varchar(50),

);

create table flights(
flight_id bigint primary key,
departing_gate varchar(20),
arriving_gate varchar(20),
created_at timestamp,
updated_at time,
airline_id bigint foreign key references airline(id),
departing_airport_id bigint foreign key references airport(id),
arriving_airport_id bigint foreign key references airport(id)
);

create table flight_manifest (
id bigint primary key,
created_at timestamp,
updated_at time,
booking_id bigint foreign key references booking(bookingid),
flight_id bigint foreign key references flights(flight_id)
);
